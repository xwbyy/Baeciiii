<%- include('partials/header') %>

<section class="py-6 px-4">
    <div class="max-w-4xl mx-auto">
        <div class="flex items-center justify-between mb-8">
            <h1 class="text-2xl font-bold flex items-center gap-3">
                <i class="fas fa-sms text-yellow-400"></i>
                <span>Beli Nomor Virtual</span>
            </h1>
            <div class="text-right">
                <div class="text-xs text-gray-400">Saldo Anda</div>
                <div class="text-lg font-bold text-green-400">Rp <%= user.balance.toLocaleString('id-ID') %></div>
            </div>
        </div>

        <div id="serviceStep">
            <div class="relative mb-6">
                <i class="fas fa-search absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
                <input type="text" id="serviceSearch" placeholder="Cari nama aplikasi..." class="w-full bg-white/5 border border-white/10 rounded-2xl py-4 pl-12 pr-4 focus:outline-none focus:ring-2 focus:ring-purple-500 transition-all">
            </div>

            <h2 class="text-lg font-semibold mb-4">Semua Aplikasi</h2>
            <div id="servicesList" class="grid grid-cols-1 md:grid-cols-2 gap-3">
                <!-- Services will be loaded here -->
                <div class="col-span-full py-20 text-center text-gray-400">
                    <i class="fas fa-spinner fa-spin text-3xl mb-3"></i>
                    <p>Memuat aplikasi...</p>
                </div>
            </div>
        </div>

        <!-- Detail Modal -->
        <div id="otpModal" class="fixed inset-0 z-50 hidden items-center justify-center p-4 bg-black/80 backdrop-blur-sm">
            <div class="bg-[#1a1a2e] border border-white/10 rounded-3xl w-full max-w-lg overflow-hidden flex flex-col max-h-[90vh]">
                <div class="p-4 border-b border-white/5 flex items-center justify-between">
                    <div class="flex items-center gap-3">
                        <img id="modalServiceImg" src="" class="w-8 h-8 rounded-lg">
                        <h3 id="modalServiceName" class="font-bold">Detail Layanan</h3>
                    </div>
                    <button onclick="closeOtpModal()" class="w-8 h-8 rounded-full bg-white/5 flex items-center justify-center hover:bg-white/10 transition">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                
                <div class="p-6 overflow-y-auto space-y-6">
                    <!-- Step 1: Select Country -->
                    <div id="countrySection">
                        <label class="block text-sm font-medium text-gray-400 mb-3">1. Pilih Negara</label>
                        <div id="countriesList" class="space-y-2">
                            <!-- Countries will be loaded here -->
                        </div>
                    </div>

                    <!-- Step 2: Select Operator -->
                    <div id="operatorSection" class="hidden">
                        <label class="block text-sm font-medium text-gray-400 mb-3">2. Pilih Operator</label>
                        <div id="operatorsList" class="grid grid-cols-2 gap-2">
                            <!-- Operators will be loaded here -->
                        </div>
                    </div>

                    <!-- Step 3: Order Summary -->
                    <div id="orderSummary" class="hidden">
                        <div class="bg-white/5 rounded-2xl p-4 space-y-3">
                            <div class="flex justify-between text-sm">
                                <span class="text-gray-400">Aplikasi</span>
                                <span id="sumService" class="font-medium"></span>
                            </div>
                            <div class="flex justify-between text-sm">
                                <span class="text-gray-400">Negara</span>
                                <span id="sumCountry" class="font-medium"></span>
                            </div>
                            <div class="flex justify-between text-sm">
                                <span class="text-gray-400">Operator</span>
                                <span id="sumOperator" class="font-medium"></span>
                            </div>
                            <div class="pt-3 border-t border-white/10 flex justify-between items-center">
                                <span class="font-bold">Total Harga</span>
                                <span id="sumPrice" class="text-xl font-black text-purple-400"></span>
                            </div>
                        </div>
                        <button onclick="confirmOrder()" id="buyBtn" class="w-full bg-gradient-to-r from-purple-600 to-blue-600 py-4 rounded-2xl font-bold mt-4 hover:scale-[1.02] transition-transform active:scale-95 disabled:opacity-50">
                            Beli Sekarang
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Active Order Status -->
        <div id="activeOrder" class="hidden mt-8 bg-white/5 border border-purple-500/30 rounded-3xl p-6 relative overflow-hidden">
            <div class="absolute top-0 right-0 p-4">
                <div id="orderTimer" class="text-xl font-mono font-bold text-purple-400">15:00</div>
            </div>
            <h3 class="font-bold text-lg mb-4">Pesanan Sedang Diproses</h3>
            
            <div class="space-y-4">
                <div>
                    <div class="text-xs text-gray-400 uppercase tracking-wider mb-1">Nomor Telepon</div>
                    <div class="flex items-center gap-3">
                        <div id="orderNumber" class="text-2xl font-mono font-black">---</div>
                        <button onclick="copyNumber()" class="text-purple-400 hover:text-purple-300">
                            <i class="fas fa-copy"></i>
                        </button>
                    </div>
                </div>

                <div>
                    <div class="text-xs text-gray-400 uppercase tracking-wider mb-1">Kode OTP</div>
                    <div id="orderOtp" class="text-4xl font-black text-green-400 tracking-widest">WAITING...</div>
                </div>

                <div class="flex gap-2 pt-4">
                    <button onclick="cancelOrder()" id="cancelBtn" class="flex-1 bg-red-500/10 text-red-500 py-3 rounded-xl font-semibold hover:bg-red-500/20 transition">
                        Batalkan
                    </button>
                    <button onclick="checkStatus()" id="refreshBtn" class="flex-1 bg-white/5 py-3 rounded-xl font-semibold hover:bg-white/10 transition">
                        <i class="fas fa-sync-alt mr-2"></i>Cek Lagi
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .service-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        transition: all 0.3s ease;
    }
    .service-card:hover {
        background: rgba(255, 255, 255, 0.08);
        transform: translateY(-2px);
        border-color: rgba(147, 51, 234, 0.3);
    }
    .country-item {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.05);
        cursor: pointer;
        transition: all 0.2s ease;
    }
    .country-item:hover, .country-item.active {
        background: rgba(147, 51, 234, 0.1);
        border-color: rgba(147, 51, 234, 0.5);
    }
    .operator-item {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.05);
        cursor: pointer;
        text-align: center;
        padding: 12px;
        border-radius: 12px;
        transition: all 0.2s ease;
    }
    .operator-item:hover, .operator-item.active {
        background: rgba(147, 51, 234, 0.1);
        border-color: rgba(147, 51, 234, 0.5);
    }
</style>

<script>
    let services = [];
    let selectedService = null;
    let selectedCountry = null;
    let selectedOperator = null;
    let activeOrderId = null;
    let statusInterval = null;

    // Load Services
    async function loadServices() {
        try {
            const res = await fetch('/api/otp/services');
            const result = await res.json();
            if (result.success) {
                services = result.data;
                renderServices(services);
            } else {
                document.getElementById('servicesList').innerHTML = `<div class="col-span-full py-20 text-center text-red-400">
                    <i class="fas fa-exclamation-circle text-3xl mb-3"></i>
                    <p>${result.message || 'Gagal memuat aplikasi'}</p>
                </div>`;
            }
        } catch (e) {
            console.error(e);
            document.getElementById('servicesList').innerHTML = '<div class="col-span-full py-20 text-center text-red-400">Terjadi kesalahan koneksi.</div>';
        }
    }

    function renderServices(items) {
        const list = document.getElementById('servicesList');
        if (!items || items.length === 0) {
            list.innerHTML = '<div class="col-span-full py-20 text-center text-gray-400">Tidak ada aplikasi ditemukan atau API Key salah.</div>';
            return;
        }
        list.innerHTML = items.map(s => `
            <div onclick="selectService(${s.service_code})" class="service-card p-4 rounded-2xl flex items-center justify-between cursor-pointer">
                <div class="flex items-center gap-4">
                    <img src="${s.service_img}" class="w-12 h-12 rounded-xl">
                    <span class="font-bold">${s.service_name}</span>
                </div>
                <i class="fas fa-chevron-right text-gray-500"></i>
            </div>
        `).join('');
    }

    // Search functionality
    document.getElementById('serviceSearch').addEventListener('input', (e) => {
        const query = e.target.value.toLowerCase();
        const filtered = services.filter(s => s.service_name.toLowerCase().includes(query));
        renderServices(filtered);
    });

    async function selectService(code) {
        selectedService = services.find(s => s.service_code === code);
        selectedCountry = null;
        selectedOperator = null;
        
        document.getElementById('modalServiceImg').src = selectedService.service_img;
        document.getElementById('modalServiceName').innerText = selectedService.service_name;
        document.getElementById('otpModal').classList.replace('hidden', 'flex');
        
        // Load Countries
        const list = document.getElementById('countriesList');
        list.innerHTML = '<div class="text-center py-4"><i class="fas fa-spinner fa-spin"></i></div>';
        
        const res = await fetch(`/api/otp/countries?service_id=${code}`);
        const result = await res.json();
        
        if (result.success) {
            list.innerHTML = result.data.map(c => `
                <div onclick="selectCountry('${c.name}', ${c.number_id}, '${c.iso_code}', ${c.pricelist[0].user_price}, '${c.pricelist[0].provider_id}')" class="country-item p-3 rounded-xl flex items-center justify-between">
                    <div class="flex items-center gap-3">
                        <img src="${c.img}" class="w-6">
                        <span class="font-medium">${c.name}</span>
                    </div>
                    <div class="text-sm font-bold text-purple-400">Rp ${c.pricelist[0].user_price.toLocaleString('id-ID')}</div>
                </div>
            `).join('');
        }
    }

    async function selectCountry(name, numberId, iso, price, providerId) {
        selectedCountry = { name, numberId, iso, price, providerId };
        
        document.querySelectorAll('.country-item').forEach(el => el.classList.remove('active'));
        event.currentTarget.classList.add('active');

        // Load Operators
        document.getElementById('operatorSection').classList.remove('hidden');
        const list = document.getElementById('operatorsList');
        list.innerHTML = '<div class="col-span-full text-center py-4"><i class="fas fa-spinner fa-spin"></i></div>';
        
        const res = await fetch(`/api/otp/operators?country=${name}&provider_id=${providerId}`);
        const result = await res.json();
        
        if (result.success) {
            list.innerHTML = result.data.map(o => `
                <div onclick="selectOperator(${o.id}, '${o.name}')" class="operator-item">
                    <img src="${o.image}" class="w-8 h-8 mx-auto mb-2 rounded">
                    <div class="text-xs font-bold truncate">${o.name}</div>
                </div>
            `).join('');
        }
    }

    function selectOperator(id, name) {
        selectedOperator = { id, name };
        document.querySelectorAll('.operator-item').forEach(el => el.classList.remove('active'));
        event.currentTarget.classList.add('active');

        // Show Summary
        document.getElementById('orderSummary').classList.remove('hidden');
        document.getElementById('sumService').innerText = selectedService.service_name;
        document.getElementById('sumCountry').innerText = selectedCountry.name;
        document.getElementById('sumOperator').innerText = name;
        document.getElementById('sumPrice').innerText = 'Rp ' + selectedCountry.price.toLocaleString('id-ID');
        
        // Scroll to summary
        document.getElementById('orderSummary').scrollIntoView({ behavior: 'smooth' });
    }

    async function confirmOrder() {
        const btn = document.getElementById('buyBtn');
        btn.disabled = true;
        btn.innerText = 'Memproses...';

        try {
            const res = await fetch('/api/otp/order', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    number_id: selectedCountry.numberId,
                    provider_id: selectedCountry.providerId,
                    operator_id: selectedOperator.id,
                    price: selectedCountry.price
                })
            });
            const result = await res.json();
            
            if (result.success) {
                closeOtpModal();
                activeOrderId = result.data.order_id;
                showActiveOrder(result.data);
                startStatusCheck();
            } else {
                alert(result.message);
            }
        } catch (e) {
            alert('Terjadi kesalahan sistem');
        } finally {
            btn.disabled = false;
            btn.innerText = 'Beli Sekarang';
        }
    }

    function showActiveOrder(data) {
        document.getElementById('serviceStep').classList.add('hidden');
        document.getElementById('activeOrder').classList.remove('hidden');
        document.getElementById('orderNumber').innerText = data.phone_number;
        document.getElementById('orderOtp').innerText = 'WAITING...';
        
        // Add fancy animation to waiting text
        document.getElementById('orderOtp').classList.add('animate-pulse');
        
        let timeLeft = 15 * 60;
        const timerEl = document.getElementById('orderTimer');
        const timer = setInterval(() => {
            const mins = Math.floor(timeLeft / 60);
            const secs = timeLeft % 60;
            timerEl.innerText = `${mins}:${secs.toString().padStart(2, '0')}`;
            if (timeLeft <= 0) {
                clearInterval(timer);
                alert('Waktu habis, pesanan dibatalkan.');
                location.reload();
            }
            timeLeft--;
        }, 1000);
    }

    async function checkStatus() {
        if (!activeOrderId) return;
        const refreshBtn = document.getElementById('refreshBtn');
        refreshBtn.classList.add('fa-spin');
        
        try {
            const res = await fetch(`/api/otp/status/${activeOrderId}`);
            const result = await res.json();
            
            if (result.success) {
                if (result.data.otp_code && result.data.otp_code !== '-') {
                    const otpEl = document.getElementById('orderOtp');
                    otpEl.innerText = result.data.otp_code;
                    otpEl.classList.remove('animate-pulse', 'text-green-400');
                    otpEl.classList.add('text-yellow-400', 'scale-110');
                    
                    // Show completion notification
                    if (window.Notification && Notification.permission === "granted") {
                        new Notification("OTP Diterima!", { body: `Kode OTP anda: ${result.data.otp_code}` });
                    }
                    
                    clearInterval(statusInterval);
                }
                if (result.data.status === 'completed' || result.data.status === 'canceled') {
                    clearInterval(statusInterval);
                    if (result.data.status === 'canceled') {
                        alert('Pesanan dibatalkan oleh sistem/provider.');
                        location.reload();
                    }
                }
            }
        } finally {
            setTimeout(() => refreshBtn.classList.remove('fa-spin'), 1000);
        }
    }

    function startStatusCheck() {
        statusInterval = setInterval(checkStatus, 5000);
    }

    async function cancelOrder() {
        if (!confirm('Yakin ingin membatalkan? Dana akan dikembalikan otomatis.')) return;
        const res = await fetch('/api/otp/set-status', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ order_id: activeOrderId, status: 'cancel' })
        });
        const result = await res.json();
        if (result.success) {
            alert('Pesanan berhasil dibatalkan. Saldo dikembalikan.');
            location.reload();
        }
    }

    function closeOtpModal() {
        document.getElementById('otpModal').classList.replace('flex', 'hidden');
        document.getElementById('operatorSection').classList.add('hidden');
        document.getElementById('orderSummary').classList.add('hidden');
    }

    function copyNumber() {
        const num = document.getElementById('orderNumber').innerText;
        navigator.clipboard.writeText(num).then(() => alert('Nomor disalin!'));
    }

    window.onload = loadServices;
</script>

<%- include('partials/footer') %>
