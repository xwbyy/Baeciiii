<%- include('partials/header') %>

<section class="relative min-h-[60vh] sm:min-h-[70vh] flex items-center overflow-hidden">
  <div class="absolute inset-0 bg-cover bg-center bg-no-repeat" style="background-image: url('https://files.catbox.moe/l5cbmr.jpg');"></div>
  <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-[#0f0a1a]"></div>
  <div class="absolute top-10 left-5 sm:left-10 w-40 sm:w-72 h-40 sm:h-72 bg-purple-500/20 rounded-full blur-3xl"></div>
  <div class="absolute bottom-10 right-5 sm:right-10 w-48 sm:w-96 h-48 sm:h-96 bg-pink-500/20 rounded-full blur-3xl"></div>
  
  <div class="max-w-7xl mx-auto px-4 py-12 sm:py-20 relative z-10 w-full">
    <div class="text-center fade-in">
      <h1 class="text-3xl sm:text-4xl md:text-6xl font-bold mb-4 sm:mb-6">
        <span class="gradient-text">Baeci Market</span>
      </h1>
      <p class="text-base sm:text-lg md:text-xl text-gray-300 mb-6 sm:mb-8 max-w-2xl mx-auto px-2">
        Marketplace premium untuk server panel Pterodactyl dan produk digital berkualitas dengan setup otomatis.
      </p>
      
      <div class="flex flex-row gap-2 sm:gap-4 justify-center px-2">
        <a href="/server" class="btn-primary px-4 sm:px-6 py-3 sm:py-3.5 rounded-xl text-sm sm:text-base font-semibold flex items-center justify-center gap-2">
          <i class="fas fa-server text-sm"></i>
          <span>Beli Server</span>
        </a>
        <a href="/products" class="btn-secondary px-4 sm:px-6 py-3 sm:py-3.5 rounded-xl text-sm sm:text-base font-semibold flex items-center justify-center gap-2">
          <i class="fas fa-box text-sm"></i>
          <span>Lihat Produk</span>
        </a>
      </div>
    </div>
  </div>
</section>

<section class="py-6 sm:py-10 px-3 sm:px-4">
  <div class="max-w-7xl mx-auto">
    <!-- Banner Slider -->
    <div class="relative overflow-hidden rounded-3xl mb-8 group h-40 sm:h-64 md:h-80">
      <div class="absolute inset-0 bg-gradient-to-r from-purple-900/40 to-pink-900/40 z-10"></div>
      <img src="https://files.catbox.moe/l5cbmr.jpg" alt="Banner" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105">
      <div class="absolute inset-0 z-20 flex flex-col justify-center px-6 sm:px-12">
        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-purple-500/20 border border-purple-500/30 text-[10px] sm:text-xs font-bold text-purple-300 mb-3 w-fit">
          <i class="fas fa-star text-[8px]"></i>
          <span>HANYA DI BAECI MARKET</span>
        </div>
        <h2 class="text-xl sm:text-3xl md:text-4xl font-extrabold text-white mb-2 leading-tight">Top Up Game & Digital<br>Otomatis 24 Jam</h2>
        <div class="flex gap-1">
          <div class="w-8 h-1 bg-white rounded-full"></div>
          <div class="w-2 h-1 bg-white/30 rounded-full"></div>
          <div class="w-2 h-1 bg-white/30 rounded-full"></div>
        </div>
      </div>
    </div>

    <!-- PPOB Icons Grid -->
    <div class="grid grid-cols-4 sm:grid-cols-4 md:grid-cols-8 gap-4 sm:gap-8 mb-12">
      <!-- Pulsa Reguler -->
      <a href="/digital?category=pulsa" class="flex flex-col items-center group">
        <div class="w-14 h-14 sm:w-16 sm:h-16 rounded-3xl bg-blue-500/10 flex items-center justify-center mb-2 group-hover:bg-blue-500/20 transition-all border border-blue-500/10 group-hover:scale-110">
          <i class="fas fa-mobile-screen text-blue-400 text-2xl"></i>
        </div>
        <span class="text-[10px] sm:text-xs text-center text-gray-300 font-medium">Pulsa Reguler</span>
      </a>
      <!-- Pulsa Transfer -->
      <a href="/digital?category=pulsa-transfer" class="flex flex-col items-center group">
        <div class="w-14 h-14 sm:w-16 sm:h-16 rounded-3xl bg-cyan-500/10 flex items-center justify-center mb-2 group-hover:bg-cyan-500/20 transition-all border border-cyan-500/10 group-hover:scale-110">
          <i class="fas fa-paper-plane text-cyan-400 text-2xl"></i>
        </div>
        <span class="text-[10px] sm:text-xs text-center text-gray-300 font-medium">Pulsa Transfer</span>
      </a>
      <!-- Paket Internet -->
      <a href="/digital?category=data" class="flex flex-col items-center group">
        <div class="w-14 h-14 sm:w-16 sm:h-16 rounded-3xl bg-indigo-500/10 flex items-center justify-center mb-2 group-hover:bg-indigo-500/20 transition-all border border-indigo-500/10 group-hover:scale-110">
          <i class="fas fa-wifi text-indigo-400 text-2xl"></i>
        </div>
        <span class="text-[10px] sm:text-xs text-center text-gray-300 font-medium">Paket Data</span>
      </a>
      <!-- Token PLN -->
      <a href="/digital?category=pln" class="flex flex-col items-center group">
        <div class="w-14 h-14 sm:w-16 sm:h-16 rounded-3xl bg-yellow-500/10 flex items-center justify-center mb-2 group-hover:bg-yellow-500/20 transition-all border border-yellow-500/10 group-hover:scale-110">
          <i class="fas fa-bolt text-yellow-400 text-2xl"></i>
        </div>
        <span class="text-[10px] sm:text-xs text-center text-gray-300 font-medium">Token PLN</span>
      </a>
      <!-- E-Money -->
      <a href="/digital?category=emoney" class="flex flex-col items-center group">
        <div class="w-14 h-14 sm:w-16 sm:h-16 rounded-3xl bg-purple-500/10 flex items-center justify-center mb-2 group-hover:bg-purple-500/20 transition-all border border-purple-500/10 group-hover:scale-110">
          <i class="fas fa-wallet text-purple-400 text-2xl"></i>
        </div>
        <span class="text-[10px] sm:text-xs text-center text-gray-300 font-medium">E-Money</span>
      </a>
      <!-- Game & Streaming -->
      <a href="/digital?category=game" class="flex flex-col items-center group">
        <div class="w-14 h-14 sm:w-16 sm:h-16 rounded-3xl bg-red-500/10 flex items-center justify-center mb-2 group-hover:bg-red-500/20 transition-all border border-red-500/10 group-hover:scale-110">
          <i class="fas fa-gamepad text-red-400 text-2xl"></i>
        </div>
        <span class="text-[10px] sm:text-xs text-center text-gray-300 font-medium">Game Topup</span>
      </a>
      <!-- Produk OTP -->
      <a href="/otp" class="flex flex-col items-center group">
        <div class="w-14 h-14 sm:w-16 sm:h-16 rounded-3xl bg-orange-500/10 flex items-center justify-center mb-2 group-hover:bg-orange-500/20 transition-all border border-orange-500/10 group-hover:scale-110">
          <i class="fas fa-comment-sms text-orange-400 text-2xl"></i>
        </div>
        <span class="text-[10px] sm:text-xs text-center text-gray-300 font-medium">Produk OTP</span>
      </a>
      <!-- Social Media -->
      <a href="/products?category=sosmed" class="flex flex-col items-center group">
        <div class="w-14 h-14 sm:w-16 sm:h-16 rounded-3xl bg-pink-500/10 flex items-center justify-center mb-2 group-hover:bg-pink-500/20 transition-all border border-pink-500/10 group-hover:scale-110">
          <i class="fas fa-hashtag text-pink-400 text-2xl"></i>
        </div>
        <span class="text-[10px] sm:text-xs text-center text-gray-300 font-medium">Sosmed</span>
      </a>
    </div>

    <div class="grid grid-cols-2 sm:grid-cols-4 gap-2 sm:gap-4">
      <div class="stat-card rounded-xl sm:rounded-2xl p-3 sm:p-5 text-center fade-in">
        <div class="text-xl sm:text-2xl md:text-3xl font-bold gradient-text mb-1"><%= stats.serverCount %>+</div>
        <div class="text-gray-400 text-xs">Server Aktif</div>
      </div>
      <div class="stat-card rounded-xl sm:rounded-2xl p-3 sm:p-5 text-center fade-in">
        <div class="text-xl sm:text-2xl md:text-3xl font-bold gradient-text mb-1"><%= stats.uptime %></div>
        <div class="text-gray-400 text-xs">Uptime</div>
      </div>
      <div class="stat-card rounded-xl sm:rounded-2xl p-3 sm:p-5 text-center fade-in">
        <div class="text-xl sm:text-2xl md:text-3xl font-bold gradient-text mb-1"><%= stats.customerCount %>+</div>
        <div class="text-gray-400 text-xs">Pelanggan</div>
      </div>
      <div class="stat-card rounded-xl sm:rounded-2xl p-3 sm:p-5 text-center fade-in">
        <div class="text-xl sm:text-2xl md:text-3xl font-bold gradient-text mb-1">24/7</div>
        <div class="text-gray-400 text-xs">Support</div>
      </div>
    </div>
  </div>
</section>

<% if (servers && servers.length > 0) { %>
<section class="py-6 sm:py-10 px-3 sm:px-4">
  <div class="max-w-7xl mx-auto">
    <div class="flex items-center justify-between mb-4 sm:mb-6">
      <h2 class="text-lg sm:text-xl md:text-2xl font-bold flex items-center gap-2">
        <i class="fas fa-server text-purple-400"></i>
        <span>Server Panel</span>
      </h2>
      <a href="/server" class="text-purple-400 hover:text-purple-300 transition flex items-center gap-1 text-xs sm:text-sm">
        Semua <i class="fas fa-arrow-right text-xs"></i>
      </a>
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 sm:gap-4">
      <% servers.slice(0, 6).forEach((server, index) => { %>
        <div class="glass-card rounded-xl sm:rounded-2xl p-4 sm:p-5 product-card fade-in">
          <div class="flex items-center justify-between mb-3">
            <div class="w-10 h-10 sm:w-11 sm:h-11 rounded-xl bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center">
              <i class="fas fa-server text-sm sm:text-base"></i>
            </div>
            <span class="px-2 py-1 rounded-full bg-green-500/20 text-green-400 text-[10px] sm:text-xs font-medium">Tersedia</span>
          </div>
          
          <h3 class="text-base sm:text-lg font-bold mb-1"><%= server.name %></h3>
          <p class="text-gray-400 text-xs sm:text-sm mb-3 line-clamp-1"><%= server.description || 'Server panel Pterodactyl berkualitas' %></p>
          
          <div class="grid grid-cols-3 gap-1.5 sm:gap-2 mb-3">
            <div class="text-center p-2 rounded-lg bg-white/5">
              <div class="text-xs sm:text-sm font-semibold text-purple-400"><%= server.ram %></div>
              <div class="text-[10px] text-gray-500">RAM</div>
            </div>
            <div class="text-center p-2 rounded-lg bg-white/5">
              <div class="text-xs sm:text-sm font-semibold text-pink-400"><%= server.cpu %></div>
              <div class="text-[10px] text-gray-500">CPU</div>
            </div>
            <div class="text-center p-2 rounded-lg bg-white/5">
              <div class="text-xs sm:text-sm font-semibold text-orange-400"><%= server.disk %></div>
              <div class="text-[10px] text-gray-500">Disk</div>
            </div>
          </div>
          
          <div class="flex items-center justify-between pt-2 border-t border-white/10">
            <div>
              <span class="text-lg sm:text-xl font-bold gradient-text">Rp <%= server.price.toLocaleString('id-ID') %></span>
              <span class="text-gray-500 text-xs">/<%= server.duration || 'bulan' %></span>
            </div>
            <a href="/server/buy/<%= server.id %>" class="btn-primary px-3 sm:px-4 py-2 rounded-lg text-xs sm:text-sm font-medium">
              Beli
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</section>
<% } %>

<section class="py-6 sm:py-10 px-3 sm:px-4">
  <div class="max-w-7xl mx-auto">
    <div class="flex items-center justify-between mb-4 sm:mb-6">
      <h2 class="text-lg sm:text-xl md:text-2xl font-bold flex items-center gap-2">
        <i class="fas fa-box text-pink-400"></i>
        <span>Produk Populer</span>
      </h2>
      <a href="/products" class="text-purple-400 hover:text-purple-300 transition flex items-center gap-1 text-xs sm:text-sm">
        Semua <i class="fas fa-arrow-right text-xs"></i>
      </a>
    </div>
    
    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-3 sm:gap-4">
      <% products.forEach((product, index) => { %>
        <a href="/products/<%= product.id %>" class="glass-card rounded-2xl overflow-hidden product-card fade-in group relative">
          <div class="aspect-[4/5] relative overflow-hidden">
            <% if (product.image) { %>
              <img src="<%= product.image %>" alt="<%= product.name %>" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
            <% } else { %>
              <div class="w-full h-full bg-gradient-to-br from-purple-900/50 to-pink-900/50 flex items-center justify-center">
                <i class="fas fa-gamepad text-3xl text-purple-400/50"></i>
              </div>
            <% } %>
            <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent"></div>
            
            <% if (product.isTrending) { %>
              <div class="absolute top-2 right-2 px-2 py-0.5 rounded-lg bg-red-500 text-[10px] font-bold flex items-center gap-1 shadow-lg">
                <i class="fas fa-fire text-[8px]"></i>
                <span>TRENDING</span>
              </div>
            <% } %>

            <div class="absolute bottom-0 left-0 right-0 p-3">
              <div class="text-[10px] text-purple-400 font-medium mb-0.5 uppercase tracking-wider flex items-center gap-1">
                <i class="fas fa-tag text-[8px]"></i>
                <%= product.category || 'Game' %>
              </div>
              <h3 class="font-bold text-sm sm:text-base text-white mb-1 line-clamp-1 group-hover:text-purple-300 transition-colors text-center"><%= product.name %></h3>
            </div>
          </div>
        </a>
      <% }) %>
    </div>
  </div>
</section>

<section class="py-8 sm:py-12 px-3 sm:px-4">
  <div class="max-w-4xl mx-auto">
    <div class="glass-card rounded-xl sm:rounded-2xl p-5 sm:p-8 text-center">
      <h2 class="text-lg sm:text-xl md:text-2xl font-bold mb-2 sm:mb-3">Mulai Sekarang</h2>
      <p class="text-gray-400 text-xs sm:text-sm mb-4 sm:mb-6 max-w-xl mx-auto">
        Daftar dan dapatkan akses ke berbagai server panel dan produk digital berkualitas dengan harga terjangkau.
      </p>
      <% if (!user) { %>
        <a href="/auth/register" class="btn-primary px-5 sm:px-6 py-2.5 sm:py-3 rounded-xl text-sm font-semibold inline-flex items-center gap-2">
          <i class="fas fa-rocket"></i>
          Daftar Gratis
        </a>
      <% } else { %>
        <a href="/server" class="btn-primary px-5 sm:px-6 py-2.5 sm:py-3 rounded-xl text-sm font-semibold inline-flex items-center gap-2">
          <i class="fas fa-server"></i>
          Beli Server
        </a>
      <% } %>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
