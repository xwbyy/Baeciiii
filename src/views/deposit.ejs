<%- include('partials/header') %>

<section class="py-6 sm:py-10 px-3 sm:px-4">
  <div class="max-w-lg mx-auto relative">
    <div class="absolute top-10 left-0 w-40 sm:w-64 h-40 sm:h-64 bg-purple-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-10 right-0 w-48 sm:w-80 h-48 sm:h-80 bg-pink-500/10 rounded-full blur-3xl"></div>
    
    <div class="relative z-10 fade-in">
      <div class="text-center mb-5 sm:mb-6">
        <div class="w-14 h-14 sm:w-16 sm:h-16 rounded-2xl bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center mx-auto mb-3">
          <i class="fas fa-wallet text-xl sm:text-2xl"></i>
        </div>
        <h1 class="text-xl sm:text-2xl font-bold gradient-text">Deposit Saldo</h1>
        <p class="text-gray-400 text-xs sm:text-sm mt-1">Top up saldo untuk melakukan pembelian</p>
      </div>
      
      <div class="glass-card rounded-xl sm:rounded-2xl p-4 sm:p-5 mb-4">
        <div class="flex items-center justify-between">
          <div>
            <span class="text-gray-400 text-xs">Saldo Anda</span>
            <div class="text-xl sm:text-2xl font-bold gradient-text">Rp <%= user.balance?.toLocaleString('id-ID') || '0' %></div>
          </div>
          <div class="w-11 h-11 sm:w-12 sm:h-12 rounded-xl bg-purple-500/20 flex items-center justify-center">
            <i class="fas fa-coins text-lg sm:text-xl text-purple-400"></i>
          </div>
        </div>
      </div>
      
      <div class="glass-card rounded-xl sm:rounded-2xl p-4 sm:p-5" id="depositForm">
        <h3 class="font-semibold text-sm mb-3 flex items-center gap-2">
          <i class="fas fa-money-bill-wave text-purple-400"></i>
          Nominal Deposit
        </h3>
        
        <div class="grid grid-cols-3 gap-2 mb-4">
          <button type="button" onclick="setAmount(10000)" class="amount-btn glass py-2 sm:py-2.5 rounded-lg text-xs sm:text-sm font-medium hover:bg-white/10 transition">
            Rp 10K
          </button>
          <button type="button" onclick="setAmount(25000)" class="amount-btn glass py-2 sm:py-2.5 rounded-lg text-xs sm:text-sm font-medium hover:bg-white/10 transition">
            Rp 25K
          </button>
          <button type="button" onclick="setAmount(50000)" class="amount-btn glass py-2 sm:py-2.5 rounded-lg text-xs sm:text-sm font-medium hover:bg-white/10 transition">
            Rp 50K
          </button>
          <button type="button" onclick="setAmount(100000)" class="amount-btn glass py-2 sm:py-2.5 rounded-lg text-xs sm:text-sm font-medium hover:bg-white/10 transition">
            Rp 100K
          </button>
          <button type="button" onclick="setAmount(250000)" class="amount-btn glass py-2 sm:py-2.5 rounded-lg text-xs sm:text-sm font-medium hover:bg-white/10 transition">
            Rp 250K
          </button>
          <button type="button" onclick="setAmount(500000)" class="amount-btn glass py-2 sm:py-2.5 rounded-lg text-xs sm:text-sm font-medium hover:bg-white/10 transition">
            Rp 500K
          </button>
        </div>
        
        <div class="mb-4">
          <label class="block text-xs font-medium text-gray-300 mb-1.5">Atau masukkan nominal:</label>
          <div class="relative">
            <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 text-sm">Rp</span>
            <input type="number" id="amountInput" min="1000" max="10000000"
              class="w-full input-glass rounded-lg py-2.5 pl-10 pr-3 text-white placeholder-gray-500 text-sm"
              placeholder="Minimal Rp 1.000">
          </div>
        </div>
        
        <h3 class="font-semibold text-sm mb-3 flex items-center gap-2">
          <i class="fas fa-credit-card text-purple-400"></i>
          Metode Pembayaran
        </h3>
        
        <div class="grid grid-cols-2 gap-2 mb-4">
          <% paymentMethods.slice(0, 6).forEach((method, i) => { %>
            <button type="button" onclick="setMethod('<%= method.code %>')" 
              class="method-btn glass p-2.5 sm:p-3 rounded-lg text-left hover:bg-white/10 transition flex items-center gap-2"
              data-code="<%= method.code %>">
              <div class="w-8 h-8 rounded-lg bg-white/10 flex items-center justify-center flex-shrink-0">
                <i class="fas <%= method.code === 'QRIS' ? 'fa-qrcode' : method.code.includes('VA') ? 'fa-university' : 'fa-wallet' %> text-purple-400 text-xs"></i>
              </div>
              <div class="min-w-0">
                <div class="font-medium text-xs truncate"><%= method.name %></div>
                <div class="text-[10px] text-gray-500">Fee: <%= method.fee %></div>
              </div>
            </button>
          <% }) %>
        </div>
        
        <button type="button" onclick="createDeposit()" id="depositBtn" class="w-full btn-primary py-2.5 sm:py-3 rounded-lg font-semibold text-sm flex items-center justify-center gap-2">
          <i class="fas fa-arrow-right"></i>
          Lanjutkan Deposit
        </button>
      </div>
      
      <div class="glass-card rounded-xl sm:rounded-2xl p-4 sm:p-5 hidden" id="paymentSection">
        <div class="text-center mb-4">
          <div id="statusIcon" class="w-12 h-12 sm:w-14 sm:h-14 rounded-xl bg-yellow-500/20 flex items-center justify-center mx-auto mb-3">
            <i class="fas fa-hourglass-half text-lg sm:text-xl text-yellow-400"></i>
          </div>
          <h3 class="text-base sm:text-lg font-bold" id="statusTitle">Menunggu Pembayaran</h3>
          <p class="text-gray-400 text-xs mt-1" id="statusDesc">Selesaikan pembayaran sebelum expired</p>
        </div>
        
        <div class="glass p-3 rounded-lg mb-3 text-center">
          <span class="text-gray-400 text-xs">Total Bayar</span>
          <div id="payAmount" class="text-lg sm:text-xl font-bold gradient-text">Rp 0</div>
        </div>
        
        <div id="qrSection" class="hidden mb-3">
          <div class="bg-white p-3 rounded-lg flex justify-center">
            <img id="qrImage" src="" alt="QR Code" class="max-w-[160px] sm:max-w-[180px]">
          </div>
        </div>
        
        <a id="payLink" href="#" target="_blank" class="block w-full btn-primary py-2.5 sm:py-3 rounded-lg font-semibold text-sm text-center mb-3">
          <i class="fas fa-external-link-alt mr-2"></i>
          Bayar Sekarang
        </a>
        
        <div id="autoCheckInfo" class="glass p-3 rounded-lg mb-3 text-center">
          <div class="flex items-center justify-center gap-2 text-xs text-gray-300">
            <i class="fas fa-sync fa-spin text-purple-400"></i>
            <span>Otomatis mengecek pembayaran...</span>
          </div>
          <div class="text-[10px] text-gray-500 mt-1">Cek ulang dalam <span id="countdown">5</span> detik</div>
        </div>
        
        <button type="button" onclick="checkStatusManual()" id="checkBtn" class="w-full btn-secondary py-2 rounded-lg text-xs font-medium flex items-center justify-center gap-2">
          <i class="fas fa-sync"></i>
          Cek Manual
        </button>
        
        <div class="flex gap-2 mt-2">
          <button type="button" onclick="resetDeposit()" class="flex-1 glass text-gray-400 hover:text-white py-2 rounded-lg transition text-xs">
            <i class="fas fa-arrow-left mr-1"></i>
            Kembali
          </button>
          <button type="button" onclick="cancelDeposit()" id="cancelBtn" class="flex-1 bg-red-500/20 text-red-400 hover:bg-red-500/30 py-2 rounded-lg transition text-xs">
            <i class="fas fa-times mr-1"></i>
            Batalkan
          </button>
        </div>
      </div>
      
      <div class="glass-card rounded-xl sm:rounded-2xl p-4 sm:p-5 hidden" id="successSection">
        <div class="text-center">
          <div class="w-14 h-14 sm:w-16 sm:h-16 rounded-xl bg-green-500/20 flex items-center justify-center mx-auto mb-3">
            <i class="fas fa-check text-2xl sm:text-3xl text-green-400"></i>
          </div>
          <h3 class="text-lg sm:text-xl font-bold text-green-400">Deposit Berhasil!</h3>
          <p class="text-gray-400 text-xs sm:text-sm mt-1">Saldo Anda telah bertambah</p>
          <div id="newBalanceDisplay" class="text-xl sm:text-2xl font-bold gradient-text mt-3">Rp 0</div>
          <button type="button" onclick="window.location.reload()" class="w-full btn-primary py-2.5 rounded-lg font-semibold text-sm mt-4">
            <i class="fas fa-check mr-2"></i>
            Selesai
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  let selectedAmount = 0;
  let selectedMethod = '';
  let currentRefId = '';
  let checkInterval = null;
  let countdownInterval = null;
  let countdownValue = 5;
  
  function setAmount(amount) {
    selectedAmount = amount;
    document.getElementById('amountInput').value = amount;
    document.querySelectorAll('.amount-btn').forEach(btn => btn.classList.remove('bg-purple-600/30', 'border-purple-500'));
    event.target.classList.add('bg-purple-600/30', 'border-purple-500');
  }
  
  function setMethod(code) {
    selectedMethod = code;
    document.querySelectorAll('.method-btn').forEach(btn => btn.classList.remove('bg-purple-600/30', 'border-purple-500'));
    document.querySelector(`[data-code="${code}"]`).classList.add('bg-purple-600/30', 'border-purple-500');
  }
  
  async function createDeposit() {
    const amount = document.getElementById('amountInput').value || selectedAmount;
    
    if (!amount || amount < 1000) {
      showAlert('Gagal', 'Minimal deposit Rp 1.000', 'warning');
      return;
    }
    
    if (!selectedMethod) {
      showAlert('Gagal', 'Pilih metode pembayaran', 'warning');
      return;
    }
    
    const btn = document.getElementById('depositBtn');
    btn.disabled = true;
    btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Memproses...';
    
    try {
      const response = await fetch('/deposit/create', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ amount, method: selectedMethod })
      });
      
      const result = await response.json();
      
      if (result.success) {
        // ... existing success logic ...
      } else {
        showAlert('Gagal', result.message, 'error');
      }
    } catch (error) {
      showAlert('Error', 'Terjadi kesalahan', 'error');
    }
    
    btn.disabled = false;
    btn.innerHTML = '<i class="fas fa-arrow-right"></i> Lanjutkan Deposit';
  }
  
  function startAutoCheck() {
    countdownValue = 5;
    updateCountdown();
    
    countdownInterval = setInterval(() => {
      countdownValue--;
      updateCountdown();
      
      if (countdownValue <= 0) {
        countdownValue = 5;
        checkStatus();
      }
    }, 1000);
  }
  
  function updateCountdown() {
    const el = document.getElementById('countdown');
    if (el) el.textContent = countdownValue;
  }
  
  function stopAutoCheck() {
    if (countdownInterval) {
      clearInterval(countdownInterval);
      countdownInterval = null;
    }
  }
  
  async function checkStatus() {
    try {
      const response = await fetch('/deposit/check/' + currentRefId);
      const result = await response.json();
      
      if (result.status === 'Paid') {
        stopAutoCheck();
        showSuccess(result.newBalance);
      }
    } catch (error) {
      console.error('Check error:', error);
    }
  }
  
  async function checkStatusManual() {
    const btn = document.getElementById('checkBtn');
    btn.disabled = true;
    btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Mengecek...';
    
    try {
      const response = await fetch('/deposit/check/' + currentRefId);
      const result = await response.json();
      
      if (result.status === 'Paid') {
        stopAutoCheck();
        showSuccess(result.newBalance);
      } else {
        showAlert('Info', 'Pembayaran sedang diproses payment gateway. Tunggu 1-5 menit atau coba cek lagi.', 'info');
      }
    } catch (error) {
      showAlert('Error', 'Gagal mengecek status', 'error');
    }
    
    btn.disabled = false;
    btn.innerHTML = '<i class="fas fa-sync"></i> Cek Manual';
  }
  
  function showSuccess(newBalance) {
    document.getElementById('paymentSection').classList.add('hidden');
    document.getElementById('successSection').classList.remove('hidden');
    
    if (newBalance) {
      document.getElementById('newBalanceDisplay').textContent = 'Rp ' + newBalance.toLocaleString('id-ID');
    }
  }
  
  function resetDeposit() {
    stopAutoCheck();
    document.getElementById('depositForm').classList.remove('hidden');
    document.getElementById('paymentSection').classList.add('hidden');
    document.getElementById('successSection').classList.add('hidden');
    currentRefId = '';
  }
  
  async function cancelDeposit() {
    if (!confirm('Yakin ingin membatalkan deposit ini?')) return;
    
    const btn = document.getElementById('cancelBtn');
    btn.disabled = true;
    btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
    
    try {
      const response = await fetch('/deposit/cancel/' + currentRefId, { method: 'POST' });
      const result = await response.json();
      
      if (result.success) {
        stopAutoCheck();
        Swal.fire({
          title: 'Dibatalkan',
          text: 'Deposit berhasil dibatalkan',
          icon: 'success',
          confirmButtonText: 'Oke',
          background: '#1a1a2e',
          color: '#fff',
          customClass: {
            popup: 'glass-card rounded-3xl',
            confirmButton: 'btn-primary px-8 py-3 rounded-xl'
          }
        }).then(() => {
          window.location.reload();
        });
      } else {
        showAlert('Gagal', result.message, 'error');
      }
    } catch (error) {
      showAlert('Error', 'Gagal membatalkan deposit', 'error');
    }
    
    btn.disabled = false;
    btn.innerHTML = '<i class="fas fa-times mr-1"></i>Batalkan';
  }
  
  window.addEventListener('beforeunload', stopAutoCheck);
</script>

<%- include('partials/footer') %>
