<%- include('partials/header') %>

<section class="py-6 sm:py-10 px-3 sm:px-4 relative overflow-hidden">
  <div class="absolute top-10 left-0 w-40 sm:w-64 h-40 sm:h-64 bg-purple-500/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-10 right-0 w-48 sm:w-80 h-48 sm:h-80 bg-pink-500/10 rounded-full blur-3xl"></div>
  
  <div class="max-w-7xl mx-auto relative z-10">
    <div class="text-center mb-6 sm:mb-8 fade-in">
      <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-2 sm:mb-3 flex items-center justify-center gap-2">
        <i class="fas fa-box text-pink-400"></i>
        <span class="gradient-text">Produk Digital</span>
      </h1>
      <p class="text-gray-400 text-xs sm:text-sm max-w-xl mx-auto px-2">
        Temukan berbagai produk digital berkualitas dengan harga terjangkau.
      </p>
    </div>
    
    <% if (categories && categories.length > 0) { %>
      <div class="flex flex-wrap justify-center gap-1.5 sm:gap-2 mb-6">
        <a href="/products" class="px-3 sm:px-4 py-1.5 sm:py-2 rounded-full text-xs sm:text-sm font-medium transition <%= !selectedCategory ? 'btn-primary' : 'glass hover:bg-white/10' %>">
          Semua
        </a>
        <% categories.forEach(cat => { %>
          <a href="/products?category=<%= encodeURIComponent(cat) %>" class="px-3 sm:px-4 py-1.5 sm:py-2 rounded-full text-xs sm:text-sm font-medium transition <%= selectedCategory === cat ? 'btn-primary' : 'glass hover:bg-white/10' %>">
            <%= cat %>
          </a>
        <% }) %>
      </div>
    <% } %>
    
    <% if (products && products.length > 0) { %>
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-2 sm:gap-4">
        <% 
          let filteredProducts = products;
          if (selectedCategory) {
            filteredProducts = products.filter(p => p.category === selectedCategory);
          }
          filteredProducts.forEach((product, index) => { 
        %>
          <a href="/products/<%= product.id %>" class="glass-card rounded-xl sm:rounded-2xl overflow-hidden product-card fade-in group">
            <div class="aspect-square bg-gradient-to-br from-purple-900/50 to-pink-900/50 flex items-center justify-center relative overflow-hidden">
              <% if (product.image) { %>
                <img src="<%= product.image %>" alt="<%= product.name %>" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
              <% } else { %>
                <i class="fas fa-box text-3xl sm:text-4xl text-purple-400"></i>
              <% } %>
              <% if (product.stock <= 5 && product.stock > 0) { %>
                <span class="absolute top-2 right-2 px-1.5 py-0.5 rounded bg-orange-500/80 text-[10px] font-medium">
                  Stok Terbatas
                </span>
              <% } else if (product.stock === 0) { %>
                <span class="absolute top-2 right-2 px-1.5 py-0.5 rounded bg-red-500/80 text-[10px] font-medium">
                  Habis
                </span>
              <% } %>
            </div>
            <div class="p-2.5 sm:p-3">
              <div class="text-[10px] text-purple-400 mb-0.5 uppercase tracking-wider"><%= product.category || 'Digital Product' %></div>
              <h3 class="font-semibold text-xs sm:text-sm mb-1.5 line-clamp-2 leading-tight"><%= product.name %></h3>
              <div class="flex items-center justify-between">
                <span class="font-bold text-sm sm:text-base text-orange-400">Rp <%= product.price.toLocaleString('id-ID') %></span>
              </div>
              <div class="text-[10px] text-gray-500 mt-1">Stok: <%= product.stock %></div>
            </div>
          </a>
        <% }) %>
      </div>
    <% } else { %>
      <div class="glass-card rounded-2xl p-8 sm:p-12 text-center">
        <i class="fas fa-box-open text-4xl sm:text-5xl text-gray-600 mb-3"></i>
        <h3 class="text-base sm:text-lg font-semibold mb-1">Belum Ada Produk</h3>
        <p class="text-gray-400 text-xs sm:text-sm">Produk akan segera tersedia. Silakan kembali lagi nanti.</p>
      </div>
    <% } %>
  </div>
</section>

<%- include('partials/footer') %>
