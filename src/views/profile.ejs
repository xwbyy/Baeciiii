<%- include('partials/header') %>

<section class="py-12 px-4">
  <div class="max-w-2xl mx-auto">
    <div class="absolute top-20 left-10 w-72 h-72 bg-purple-500/20 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-pink-500/20 rounded-full blur-3xl"></div>
    
    <div class="relative z-10 fade-in">
      <div class="glass-card rounded-3xl p-8 mb-6">
        <div class="flex items-center gap-4 mb-6">
          <div class="w-20 h-20 rounded-2xl bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center">
            <i class="fas fa-user text-3xl"></i>
          </div>
          <div>
            <h1 class="text-2xl font-bold"><%= user.username %></h1>
            <p class="text-gray-400"><%= user.email %></p>
            <span class="inline-block mt-1 px-3 py-1 rounded-full bg-purple-500/20 text-purple-400 text-xs font-medium">
              <%= user.role === 'admin' ? 'Administrator' : 'Member' %>
            </span>
          </div>
        </div>
        
        <div class="grid grid-cols-2 gap-4">
          <a href="/deposit" class="glass p-4 rounded-xl text-center hover:bg-white/10 transition">
            <i class="fas fa-wallet text-2xl text-purple-400 mb-2"></i>
            <div class="text-lg font-bold">Rp <%= user.balance?.toLocaleString('id-ID') || '0' %></div>
            <div class="text-xs text-gray-500">Saldo</div>
          </a>
          <a href="/profile/orders" class="glass p-4 rounded-xl text-center hover:bg-white/10 transition">
            <i class="fas fa-shopping-bag text-2xl text-pink-400 mb-2"></i>
            <div class="text-lg font-bold">Lihat</div>
            <div class="text-xs text-gray-500">Pesanan Saya</div>
          </a>
        </div>
      </div>
      
      <div class="glass-card rounded-3xl p-6 mb-6">
        <h3 class="font-semibold mb-4 flex items-center gap-2">
          <i class="fas fa-bell text-purple-400"></i>
          Notifikasi
        </h3>
        <div class="space-y-3">
          <% if (typeof notifications !== 'undefined' && notifications.length > 0) { %>
            <% notifications.forEach(n => { %>
              <div class="p-4 rounded-xl glass border-l-4 <%= n.type === 'success' ? 'border-green-500' : n.type === 'danger' ? 'border-red-500' : n.type === 'warning' ? 'border-yellow-500' : 'border-blue-500' %> <%= n.isRead === 'true' ? 'opacity-60' : '' %>" onclick="markRead('<%= n.id %>')">
                <div class="flex justify-between items-start mb-1">
                  <h4 class="font-bold text-sm"><%= n.title %></h4>
                  <span class="text-[10px] text-gray-500"><%= new Date(n.createdAt).toLocaleDateString('id-ID') %></span>
                </div>
                <p class="text-xs text-gray-400"><%= n.message %></p>
              </div>
            <% }) %>
          <% } else { %>
            <div class="text-center text-gray-500 text-sm py-4">Tidak ada notifikasi</div>
          <% } %>
        </div>
      </div>

      <div class="glass-card rounded-3xl p-6 mb-6">
        <h3 class="font-semibold mb-4 flex items-center gap-2">
          <i class="fas fa-link text-purple-400"></i>
          Menu Cepat
        </h3>
        
        <div class="space-y-3">
          <a href="/deposit" class="flex items-center justify-between p-4 rounded-xl glass hover:bg-white/10 transition">
            <div class="flex items-center gap-3">
              <i class="fas fa-plus-circle text-green-400"></i>
              <span>Deposit Saldo</span>
            </div>
            <i class="fas fa-chevron-right text-gray-500"></i>
          </a>
          <a href="/profile/transactions" class="flex items-center justify-between p-4 rounded-xl glass hover:bg-white/10 transition">
            <div class="flex items-center gap-3">
              <i class="fas fa-receipt text-purple-400"></i>
              <span>Riwayat Transaksi</span>
            </div>
            <i class="fas fa-chevron-right text-gray-500"></i>
          </a>
          <a href="/profile/orders" class="flex items-center justify-between p-4 rounded-xl glass hover:bg-white/10 transition">
            <div class="flex items-center gap-3">
              <i class="fas fa-box text-pink-400"></i>
              <span>Pesanan Saya</span>
            </div>
            <i class="fas fa-chevron-right text-gray-500"></i>
          </a>
        </div>
      </div>
      
      <div class="glass-card rounded-3xl p-6 mb-6">
        <h3 class="font-semibold mb-4 flex items-center gap-2">
          <i class="fas fa-cog text-purple-400"></i>
          Pengaturan Akun
        </h3>
        
        <form id="profileForm" class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">No. WhatsApp</label>
            <input type="tel" name="phone" value="<%= user.phone || '' %>"
              class="w-full input-glass rounded-xl py-3 px-4 text-white placeholder-gray-500"
              placeholder="08xxxxxxxxxx">
          </div>
          
          <div class="border-t border-white/10 pt-4 mt-4">
            <h4 class="font-medium mb-3">Ubah Password</h4>
            <div class="space-y-3">
              <input type="password" name="currentPassword"
                class="w-full input-glass rounded-xl py-3 px-4 text-white placeholder-gray-500"
                placeholder="Password saat ini">
              <input type="password" name="newPassword"
                class="w-full input-glass rounded-xl py-3 px-4 text-white placeholder-gray-500"
                placeholder="Password baru">
            </div>
          </div>
          
          <button type="submit" class="w-full btn-primary py-3 rounded-xl font-semibold">
            Simpan Perubahan
          </button>
        </form>
      </div>
      
      <a href="/auth/logout" class="glass-card rounded-3xl p-4 flex items-center justify-center gap-3 text-red-400 hover:bg-red-500/10 transition">
        <i class="fas fa-sign-out-alt"></i>
        <span class="font-medium">Keluar</span>
      </a>
    </div>
  </div>
</section>

<script>
  document.getElementById('profileForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(e.target);
    const data = Object.fromEntries(formData.entries());
    
    try {
      const response = await fetch('/profile/update', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });
      
      const result = await response.json();
      showToast(result.message, result.success ? 'success' : 'error');
    } catch (error) {
      showToast('Terjadi kesalahan', 'error');
    }
  });

  async function markRead(id) {
    try {
      await fetch('/profile/notifications/read/' + id, { method: 'POST' });
      location.reload();
    } catch (e) {}
  }
</script>

<%- include('partials/footer') %>
