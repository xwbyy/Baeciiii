<%- include('partials/header') %>

<section class="py-6 sm:py-10 px-3 sm:px-4 relative overflow-hidden">
  <div class="absolute top-10 left-0 w-40 sm:w-64 h-40 sm:h-64 bg-purple-500/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-10 right-0 w-48 sm:w-80 h-48 sm:h-80 bg-pink-500/10 rounded-full blur-3xl"></div>
  
  <div class="max-w-7xl mx-auto relative z-10">
    <div class="text-center mb-6 sm:mb-10 fade-in">
      <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-2 sm:mb-3 flex items-center justify-center gap-2">
        <i class="fas fa-server text-purple-400"></i>
        <span class="gradient-text">Server Panel</span>
      </h1>
      <p class="text-gray-400 text-xs sm:text-sm max-w-xl mx-auto px-2">
        Nikmati kemudahan mengelola script dengan Server Panel kami. Unggah script Anda dan biarkan server kami yang menjalankannya. Praktis, cepat, dan efisien!
      </p>
    </div>
    
    <% if (error) { %>
      <div class="bg-red-500/20 border border-red-500/50 text-red-300 px-4 py-3 rounded-xl mb-4 flex items-center gap-2 text-sm">
        <i class="fas fa-exclamation-circle"></i>
        <span><%= error %></span>
      </div>
    <% } %>
    
    <% if (success) { %>
      <div class="bg-green-500/20 border border-green-500/50 text-green-300 px-4 py-3 rounded-xl mb-4 flex items-center gap-2 text-sm">
        <i class="fas fa-check-circle"></i>
        <span><%= success %></span>
      </div>
    <% } %>
    
    <% if (servers && servers.length > 0) { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 sm:gap-4">
        <% servers.forEach((server, index) => { %>
          <div class="glass-card rounded-xl sm:rounded-2xl p-4 sm:p-5 product-card fade-in">
            <div class="flex items-center justify-between mb-3">
              <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center">
                <i class="fas fa-server text-sm sm:text-lg"></i>
              </div>
              <span class="px-2 py-1 rounded-full bg-green-500/20 text-green-400 text-[10px] sm:text-xs font-medium flex items-center gap-1">
                <span class="w-1.5 h-1.5 rounded-full bg-green-400"></span>
                Tersedia
              </span>
            </div>
            
            <h3 class="text-base sm:text-lg font-bold mb-1"><%= server.name %></h3>
            <p class="text-gray-400 text-xs sm:text-sm mb-3 line-clamp-2"><%= server.description || 'Server panel Pterodactyl berkualitas tinggi' %></p>
            
            <div class="grid grid-cols-3 gap-1.5 sm:gap-2 mb-3">
              <div class="text-center p-2 sm:p-2.5 rounded-lg bg-white/5 border border-white/5">
                <i class="fas fa-memory text-purple-400 text-xs mb-0.5 block"></i>
                <div class="text-sm sm:text-base font-bold text-purple-400"><%= server.ram %><% if(server.ram && !String(server.ram).includes('MB')){ %>MB<% } %></div>
                <div class="text-[10px] text-gray-500">RAM</div>
              </div>
              <div class="text-center p-2 sm:p-2.5 rounded-lg bg-white/5 border border-white/5">
                <i class="fas fa-microchip text-pink-400 text-xs mb-0.5 block"></i>
                <div class="text-sm sm:text-base font-bold text-pink-400"><%= server.cpu %><% if(server.cpu && !String(server.cpu).includes('%')){ %>%<% } %></div>
                <div class="text-[10px] text-gray-500">CPU</div>
              </div>
              <div class="text-center p-2 sm:p-2.5 rounded-lg bg-white/5 border border-white/5">
                <i class="fas fa-hdd text-orange-400 text-xs mb-0.5 block"></i>
                <div class="text-sm sm:text-base font-bold text-orange-400"><%= server.disk %><% if(server.disk && !String(server.disk).includes('MB')){ %>MB<% } %></div>
                <div class="text-[10px] text-gray-500">Disk</div>
              </div>
            </div>
            
            <div class="flex items-center gap-2 mb-3 text-xs text-gray-400">
              <i class="fas fa-map-marker-alt text-purple-400"></i>
              <span><%= server.location || 'Singapore' %></span>
            </div>
            
            <div class="border-t border-white/10 pt-3 flex items-center justify-between">
              <div>
                <span class="text-lg sm:text-xl font-bold gradient-text">Rp <%= server.price.toLocaleString('id-ID') %></span>
                <span class="text-gray-500 text-xs">/<%= server.duration || 'bulan' %></span>
              </div>
              <a href="/server/buy/<%= server.id %>" class="btn-primary px-4 sm:px-5 py-2 sm:py-2.5 rounded-lg text-xs sm:text-sm font-semibold flex items-center gap-1.5">
                <i class="fas fa-shopping-cart text-xs"></i>
                Beli
              </a>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="glass-card rounded-2xl p-8 sm:p-12 text-center">
        <i class="fas fa-server text-4xl sm:text-5xl text-gray-600 mb-3"></i>
        <h3 class="text-base sm:text-lg font-semibold mb-1">Belum Ada Server</h3>
        <p class="text-gray-400 text-xs sm:text-sm">Server akan segera tersedia. Silakan kembali lagi nanti.</p>
      </div>
    <% } %>
  </div>
</section>

<%- include('partials/footer') %>
