<%- include('partials/header') %>

<section class="py-12 px-4">
  <div class="max-w-2xl mx-auto">
    <div class="absolute top-20 left-10 w-72 h-72 bg-purple-500/20 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-pink-500/20 rounded-full blur-3xl"></div>
    
    <div class="relative z-10 fade-in">
      <a href="/server" class="inline-flex items-center gap-2 text-gray-400 hover:text-white mb-6 transition">
        <i class="fas fa-arrow-left"></i>
        Kembali ke Daftar Server
      </a>
      
      <div id="successModal" class="hidden fixed inset-0 z-[100] flex items-center justify-center px-4">
        <div class="absolute inset-0 bg-black/80 backdrop-blur-sm"></div>
        <div class="relative glass-card rounded-3xl p-8 max-w-md w-full border border-white/20 shadow-2xl scale-in">
          <div class="flex flex-col items-center text-center">
            <div class="w-20 h-20 rounded-full bg-green-500/20 flex items-center justify-center mb-6">
              <i class="fas fa-check-circle text-5xl text-green-400"></i>
            </div>
            <h2 class="text-2xl font-bold mb-2">Pembelian Berhasil!</h2>
            <p class="text-gray-400 mb-6">Server Anda sedang diproses dan akan segera aktif.</p>
            
            <div id="credentialsArea" class="hidden w-full space-y-4 mb-8">
              <div class="p-4 rounded-2xl bg-white/5 border border-white/10 text-left space-y-3">
                <div class="flex items-center justify-between">
                  <span class="text-xs text-gray-500 uppercase tracking-wider">Login URL</span>
                  <a id="modalLoginUrl" href="#" target="_blank" class="text-sm text-purple-400 font-medium truncate ml-4 hover:underline"></a>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-xs text-gray-500 uppercase tracking-wider">Username</span>
                  <span id="modalUsername" class="text-sm font-mono text-white"></span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-xs text-gray-500 uppercase tracking-wider">Password</span>
                  <span id="modalPassword" class="text-sm font-mono text-white"></span>
                </div>
              </div>
              <div class="text-xs text-yellow-400 bg-yellow-400/10 p-3 rounded-xl border border-yellow-400/20">
                <i class="fas fa-exclamation-triangle mr-1"></i> Simpan data login ini sekarang!
              </div>
            </div>

            <button onclick="window.location.href='/profile/orders'" class="w-full btn-primary py-4 rounded-2xl font-bold flex items-center justify-center gap-2">
              Buka Pesanan <i class="fas fa-arrow-right"></i>
            </button>
          </div>
        </div>
      </div>

      <div class="glass-card rounded-3xl p-8">
        <div class="flex items-center gap-4 mb-6">
          <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center">
            <i class="fas fa-server text-2xl"></i>
          </div>
          <div>
            <h1 class="text-2xl font-bold"><%= server.name %></h1>
            <p class="text-gray-400">Server Panel Pterodactyl</p>
          </div>
        </div>
        
        <div class="grid grid-cols-3 gap-3 mb-6">
          <div class="text-center p-4 rounded-xl bg-white/5 border border-white/10">
            <i class="fas fa-memory text-purple-400 mb-2 text-xl"></i>
            <div class="text-lg font-bold text-purple-400"><%= server.ram %><% if(server.ram && !String(server.ram).includes('MB')){ %>MB<% } %></div>
            <div class="text-xs text-gray-500">RAM</div>
          </div>
          <div class="text-center p-4 rounded-xl bg-white/5 border border-white/10">
            <i class="fas fa-microchip text-pink-400 mb-2 text-xl"></i>
            <div class="text-lg font-bold text-pink-400"><%= server.cpu %><% if(server.cpu && !String(server.cpu).includes('%')){ %>%<% } %></div>
            <div class="text-xs text-gray-500">CPU</div>
          </div>
          <div class="text-center p-4 rounded-xl bg-white/5 border border-white/10">
            <i class="fas fa-hdd text-orange-400 mb-2 text-xl"></i>
            <div class="text-lg font-bold text-orange-400"><%= server.disk %><% if(server.disk && !String(server.disk).includes('MB')){ %>MB<% } %></div>
            <div class="text-xs text-gray-500">Disk</div>
          </div>
        </div>
        
        <form id="purchaseForm" class="space-y-6">
          <input type="hidden" name="serverId" value="<%= server.id %>">
          
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">
              <i class="fas fa-map-marker-alt text-purple-400 mr-2"></i>
              Server Lokasi
            </label>
            <select name="location" class="w-full input-glass rounded-xl py-3 px-4 text-white">
              <option value="singapore">Singapore</option>
              <option value="indonesia">Indonesia</option>
              <option value="germany">Germany</option>
            </select>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">
              <i class="fas fa-wallet text-purple-400 mr-2"></i>
              Saldo Anda
            </label>
            <div class="input-glass rounded-xl py-3 px-4 text-white bg-white/5">
              Rp <%= userBalance.toLocaleString('id-ID') %>
            </div>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">
              <i class="fas fa-calendar text-purple-400 mr-2"></i>
              Pilih rentang waktu:
            </label>
            <select name="duration" id="durationSelect" class="w-full input-glass rounded-xl py-3 px-4 text-white">
              <option value="1day" data-multiplier="0.05">1 Hari</option>
              <option value="3day" data-multiplier="0.15">3 Hari</option>
              <option value="7day" data-multiplier="0.35">7 Hari</option>
              <option value="15day" data-multiplier="0.65">15 Hari</option>
              <option value="1month" data-multiplier="1" selected>1 Bulan</option>
              <option value="3month" data-multiplier="3">3 Bulan (Diskon 5%)</option>
              <option value="6month" data-multiplier="6">6 Bulan (Diskon 10%)</option>
              <option value="1year" data-multiplier="12">1 Tahun (Diskon 15%)</option>
            </select>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">
              <i class="fas fa-ticket-alt text-purple-400 mr-2"></i>
              Voucher Promo (Opsional)
            </label>
            <input type="text" name="voucherCode" placeholder="Masukkan kode voucher"
              class="w-full input-glass rounded-xl py-3 px-4 text-white placeholder-gray-500 uppercase">
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">
              <i class="fas fa-tag text-purple-400 mr-2"></i>
              Total Harga Diskon:
            </label>
            <div id="totalPrice" class="input-glass rounded-xl py-3 px-4 text-2xl font-bold gradient-text bg-white/5">
              Rp <span id="priceDisplay">-</span>
            </div>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">
              <i class="fas fa-server text-purple-400 mr-2"></i>
              Nama Server (Opsional)
            </label>
            <input type="text" name="serverName" 
              class="w-full input-glass rounded-xl py-3 px-4 text-white placeholder-gray-500"
              placeholder="Contoh: My Bot Server">
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">
              <i class="fas fa-gift text-purple-400 mr-2"></i>
              Kode Referral (Opsional)
            </label>
            <input type="text" name="referralCode"
              class="w-full input-glass rounded-xl py-3 px-4 text-white placeholder-gray-500"
              placeholder="Masukkan kode referral">
          </div>
          
          <button type="submit" id="purchaseBtn" class="w-full btn-primary py-4 rounded-xl font-semibold text-lg flex items-center justify-center gap-3">
            <i class="fas fa-shopping-cart"></i>
            Beli Sekarang
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  const basePriceRaw = parseInt('<%= server.price || 0 %>');
  const basePrice = Math.max(0, isNaN(basePriceRaw) ? 0 : basePriceRaw);
  const durationSelect = document.getElementById('durationSelect');
  const priceDisplayEl = document.getElementById('priceDisplay');
  const purchaseForm = document.getElementById('purchaseForm');
  const purchaseBtn = document.getElementById('purchaseBtn');
  
  const discounts = {
    '1day': 1,
    '3day': 1,
    '7day': 1,
    '15day': 1,
    '1month': 1,
    '3month': 0.95,
    '6month': 0.90,
    '1year': 0.85
  };
  
  const multipliers = {
    '1day': 0.05,
    '3day': 0.15,
    '7day': 0.35,
    '15day': 0.65,
    '1month': 1,
    '3month': 3,
    '6month': 6,
    '1year': 12
  };
  
  function formatPrice(price) {
    const num = Math.max(0, Math.floor(price));
    return new Intl.NumberFormat('id-ID').format(num);
  }
  
  function updatePrice() {
    console.log('updatePrice called, basePrice:', basePrice);
    
    if (!basePrice || basePrice <= 0) {
      priceDisplayEl.textContent = '0';
      console.log('basePrice invalid:', basePrice);
      return;
    }
    
    const duration = durationSelect.value;
    const discount = discounts[duration] || 1;
    const multiplier = multipliers[duration] || 1;
    const total = Math.floor(basePrice * multiplier * discount);
    
    console.log('Updating price:', { basePrice, duration, discount, multiplier, total });
    priceDisplayEl.textContent = formatPrice(total);
  }
  
  // Bind events
  if (durationSelect) {
    durationSelect.addEventListener('change', updatePrice);
  }
  
  // Listen for voucher code changes
  const voucherInput = document.querySelector('input[name="voucherCode"]');
  if (voucherInput) {
    voucherInput.addEventListener('change', updatePrice);
    voucherInput.addEventListener('input', updatePrice);
  }
  
  // Update on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', updatePrice);
  } else {
    updatePrice();
  }
  
  // Emergency update after delay to ensure it's loaded
  setTimeout(updatePrice, 100);
  
  purchaseForm.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    purchaseBtn.disabled = true;
    purchaseBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Memproses...';
    
    const formData = new FormData(purchaseForm);
    const data = Object.fromEntries(formData.entries());
    
    try {
      const response = await fetch('/server/purchase', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });
      
      const result = await response.json();
      
      if (result.success) {
        if (result.serverCredentials) {
          const creds = result.serverCredentials;
          document.getElementById('modalLoginUrl').href = creds.loginUrl;
          document.getElementById('modalLoginUrl').textContent = creds.loginUrl;
          document.getElementById('modalUsername').textContent = creds.username;
          document.getElementById('modalPassword').textContent = creds.password;
          document.getElementById('credentialsArea').classList.remove('hidden');
        }
        
        document.getElementById('successModal').classList.remove('hidden');
        
        // Hide form to focus on modal
        purchaseForm.classList.add('opacity-50', 'pointer-events-none');
      } else {
        showToast(result.message, 'error');
        purchaseBtn.disabled = false;
        purchaseBtn.innerHTML = '<i class="fas fa-shopping-cart"></i> Beli Sekarang';
      }
    } catch (error) {
      showToast('Terjadi kesalahan, silakan coba lagi', 'error');
      purchaseBtn.disabled = false;
      purchaseBtn.innerHTML = '<i class="fas fa-shopping-cart"></i> Beli Sekarang';
    }
  });
</script>

<%- include('partials/footer') %>
